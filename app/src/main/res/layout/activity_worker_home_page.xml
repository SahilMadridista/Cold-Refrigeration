<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Worker.WorkerHomePage">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_medium"
                android:text="@string/app_name"
                android:textSize="25sp"
                android:id="@+id/a"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:textSize="20sp"
                android:id="@+id/name_text"
                android:layout_below="@id/a"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp">

            </TextView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_sign_out"
                android:layout_marginEnd="10dp"
                android:id="@+id/sign_out_btn"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">

            </ImageView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/active_status_card"
            android:layout_marginBottom="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:background="@color/white"
                    android:textSize="20sp"
                    android:id="@+id/active_status_text"
                    android:text="@string/active_status"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/lato_medium"
                    android:textColor="@color/dark_grey">

                </TextView>

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/active_status_check"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp">

                </androidx.appcompat.widget.SwitchCompat>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/workers_card"
            android:layout_marginBottom="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_wallet"
                    android:id="@+id/i"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp">

                </ImageView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/silver"
                    android:layout_toEndOf="@id/i"
                    android:layout_centerVertical="true"
                    android:id="@+id/test"
                    android:layout_marginStart="15dp">

                </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:layout_toEndOf="@id/test"
                    android:background="@color/white"
                    android:textSize="20sp"
                    android:id="@+id/wallet_amount"
                    android:text="@string/wallet_amount"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/lato_medium"
                    android:textColor="@color/dark_grey">

                </TextView>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_refresh"
                    android:id="@+id/refresh_btn"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp">

                </ImageView>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/pending_work_card"
            android:layout_marginBottom="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_pending"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp">

                </ImageView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/silver"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp">

                </View>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:background="@color/white"
                    android:textSize="20sp"
                    android:text="@string/pending_work"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/lato_medium"
                    android:textColor="@color/dark_grey">

                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/work_history_card"
            android:layout_marginBottom="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_check"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp">

                </ImageView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/silver"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp">

                </View>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:background="@color/white"
                    android:textSize="20sp"
                    android:text="@string/my_work"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/lato_medium"
                    android:textColor="@color/dark_grey">

                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:visibility="gone"
                android:fontFamily="@font/lato_medium"
                android:textColor="@color/dark_grey"
                android:text="@string/below_amount"
                android:gravity="center"
                android:padding="10dp"
                android:id="@+id/alert_text"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp">

            </TextView>


        </RelativeLayout>



    </LinearLayout>



</LinearLayout>